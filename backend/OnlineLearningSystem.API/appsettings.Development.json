{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "OnlineLearningSystem.API": "Debug"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "OnlineLearningSystem.API.Controllers": "Debug"
      }
    },
    "File": {
      "Path": "logs/api-debug.log",
      "Append": true,
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 3
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=OnlineLearningSystem;Trusted_Connection=True;MultipleActiveResultSets=true;ConnectRetryCount=0"
  },
  "AllowedHosts": "*",
  "ASPNETCORE_ENVIRONMENT": "Development",
  "EnableSwagger": true,
  "DisableDatabase": false,
  "DisableAuthentication": false,
  "UseDebugMode": true
}
